test optimize precise-output
set opt_level=speed
target x86_64

;; (iadd ty (select ty c x y) z) -> (select ty c (x + z) (y + z))
function %simplify_iadd_select_const_i32(i8) -> i32 fast {
block0(v0: i8):
    v1 = iconst.i32 5
    v2 = iconst.i32 10
    v3 = select v0, v1, v2
    v4 = iconst.i32 3
    v5 = iadd v3, v4
    return v5
}

