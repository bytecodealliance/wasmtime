function %simplify_iadd_select_const_i32_big_constants(i8) -> i8 fast {
block0(v0: i8):
    v1 = iconst.i8 100
    v2 = iconst.i8 200
    v3 = select v0, v1, v2
    v4 = iconst.i8 200
    v5 = iadd v3, v4
    return v5
}

