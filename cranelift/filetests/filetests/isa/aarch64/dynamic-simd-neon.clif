test compile
target aarch64

function %i8x16_splat_add(i8, i8) -> i8x16 {
  gv0 = dyn_scale_target_const.i8x16
  dt0 = i8x16*gv0

block0(v0: i8, v1: i8):
  v2 = splat.dt0 v0
  v3 = splat.dt0 v1
  v4 = iadd v2, v3
  v5 = extract_vector v4, 0
  return v5
}

; check:  dup v4.16b, w0
; nextln: dup v6.16b, w1
; nextln: add v0.16b, v4.16b, v6.16b
; nextln: ret

