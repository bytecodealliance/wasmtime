(decl pure partial u6_shift_from_iconst (Value) U6)
(rule (u6_shift_from_iconst (u64_from_iconst val))
  (if-let (u6_from_u8 x) (u64_as_u8 (u64_and val 0x3f)))
  x)

(decl u6_from_u8 (U6) u8)
